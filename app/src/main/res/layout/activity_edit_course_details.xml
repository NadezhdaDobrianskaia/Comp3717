<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    tools:context="com.example.marculator.comp3717.editCourseDetails">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/courseName"
        />
    <EditText
        android:id="@+id/edit_activity"
        android:layout_weight="1"
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_activity_name"/>
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/courseName"
        />

    <EditText
        android:id="@+id/edit_weight"
        android:layout_weight="1"
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_weight"/>
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/courseName"
        />

    <EditText
        android:id="@+id/edit_dueDate"
        android:layout_weight="1"
        android:layout_width = "match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_dueDate"/>
</LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_activity"
        android:onClick="backToCourseScreen"
        android:layout_gravity="bottom"/>

</LinearLayout>
