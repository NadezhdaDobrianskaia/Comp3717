<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="right"
    >
    tools:context="com.example.marculator.comp3717.editCourseDetails">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courseName"
            android:layout_weight="2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"


        />
        <EditText
            android:id="@+id/edit_courseName"
            android:layout_weight="1"
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_course_name"
            android:layout_marginRight="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <EditText
            android:id="@+id/edit_category"
            android:layout_weight="1"
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_category"
            android:layout_marginRight="30dp"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categoryWeight"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
        />

        <EditText
            android:id="@+id/edit_weight"
            android:layout_weight="1"
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_categoryWeight"
            android:layout_marginRight="30dp"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categoryDueDate"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

        />

        <EditText
            android:id="@+id/edit_dueDate"
            android:layout_weight="1"
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/edit_dueDate"
            android:layout_marginRight="30dp"
        />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_activity"
        android:onClick="addToTemplatesScreen"
        android:layout_gravity="bottom"/>

</LinearLayout>
