<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    tools:context="com.example.marculator.comp3717.addCourseDetails">


    <EditText
        android:id="@+id/edit_activity"
        android:layout_weight="1"
        android:layout_width = "0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_activity_name"/>
    <EditText
        android:id="@+id/edit_weight"
        android:layout_weight="1"
        android:layout_width = "0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_weight"/>
    <EditText
        android:id="@+id/edit_dueDate"
        android:layout_weight="1"
        android:layout_width = "0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_dueDate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_activity"
        android:onClick="backToCourseScreen"/>

</RelativeLayout>
